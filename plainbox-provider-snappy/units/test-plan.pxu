 QA test plan for generic Snappy hardware. This test plan contains
 all of the tests used to validate Snappy devices.
estimated_duration: 3600
include:
    installation/live-system-dd-factory
    factory/package-list
    factory/report
    factory/factory-reset-report
    recovery/factory-restore-bios
    snappy/update
    snappy/rollback
    snappy/re-update
    snappy/fail-boot
    snappy/sshd
    snappy/webdm
    snappy/test-list
    snappy/test-store-config
    snappy/test-store-install-beta
    snappy/test-store-install-edge
    snappy/generic-store-oem-package
    bluetooth/hid
    ethernet/eth0/hotplug-connect
    ethernet/eth0/hotplug-disconnect
    ethernet/eth1/hotplug-connect
    ethernet/eth1/hotplug-disconnect
    led/power
    led/bluetooth
    led/serial
    power-management/poweroff
    power-management/reboot
    rtc/battery
    monitor/hdmi
    wireless/wireless_scanning
    wireless/wireless_connection_open_ac_nm
    wireless/wireless_connection_open_bg_nm
    wireless/wireless_connection_open_n_nm
